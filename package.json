{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "engines": {
    "node": "12.16.3"
  },
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:prod": "env SSL=true DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate",
    "migrate:prod0": "env SSL=true DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate -- 0",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node src/server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && env INLINE_RUNTIME_CHUNK=false npm run build",
    "predeploy": "npm audit",
    "deploy": "git push heroku master",
    "seed": "psql -U postgres -d mystripes -f ./db/seeds/seed.all_tables.sql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.4.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.5",
    "pg": "7.18.2",
    "react-beforeunload": "^2.4.0",
    "react-lazyload": "^3.1.0",
    "stripe": "^8.102.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "postgrator-cli": "4.0.0",
    "supertest": "^5.0.0"
  }
}
